<?xml version="1.0" encoding="UTF-8"?>
<media>
	<containerFormats>
		<format>flv</format>
		<format>f4v</format>
		<format>wmv</format>
		<format>mp4</format>
		<format>m4v</format>
		<format>ogg</format>
		<format>webm</format>
		
		<!-- // Mpeg1 standard -->
		<format>mpeg</format>

		<format>mpegts</format>
		<format>avi</format>
		<format>mkv</format>
		<format>divx</format>
		<format>mov</format>
		<format>3gp</format>
		
		<!-- // Audio ones -->
		<format>mp3</format>
		<format>wma</format>
		<format>m4a</format>

	</containerFormats>
	
	<audioCodecs>
	
		<codec category="wmv">
			<codec name="wmav2" decode="true" encode="true" provider="ffmpeg" />
		</codec>
	
		<codec category="ac3">
			<codec name="ac3" decode="true" encode="true" provider="ffmpeg" />
		</codec>

		<codec category="flac">
			<codec name="flac" decode="true" encode="true" provider="ffmpeg" />
		</codec>


		<codec category="aac">
			<codec name="aac" decode="true" encode="true" provider="ffmpeg" additionalParameters="-strict experimental"/>
			<!-- At this point its not available, but when we do, it should be the preferred codec 
				<codec name="libfaac" decode="true" encode="true" provider="libfaac??" />
			-->
		</codec>

		<codec category="mp3">
			<codec name="libmp3lame" decode="false" encode="true" provider="ffmpeg" />
			<codec name="mp3" decode="true" encode="false" provider="ffmpeg" />
		</codec>

		<codec category="vorbis">
			<codec name="libvorbis" decode="false" encode="true" provider="ffmpeg" />
			<codec name="vorbis" decode="true" encode="true" provider="ffmpeg" />
		</codec>

		<!-- Can be used for 3gp or some old android -? -->
		<codec category="3gp">
			<codec name="libopencore_amrnb" decode="true" encode="true" provider="ffmpeg" />
		</codec>

		<codec category="mpeg2">
			<codec name="pcm_s16be" decode="true" encode="true" provider="ffmpeg" />
			<codec name="pcm_s16le" decode="true" encode="true" provider="ffmpeg" />
		</codec>

	</audioCodecs>

	<videoCodecs>
	
		<codec category="vp6">
			<codec name="vp6" decode="true" encode="false" provider="ffmpeg" />
		</codec>
	
		<!--  Decode only -->
		<codec>vp6</codec>

		<!--  Encode only -->
		<codec>libx264</codec>

		<!--  Encode only -->
		<codec>libtheora</codec>

		<codec>wmv2</codec>
		<codec>msmpeg4</codec>
		<codec>h263</codec>
		<codec>mpeg4</codec>
		<codec>libvpx</codec>
		<codec>mpeg2video</codec>
		<codec>flv</codec>
	
	</videoCodecs>

</media>