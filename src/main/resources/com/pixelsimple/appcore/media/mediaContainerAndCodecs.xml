<?xml version="1.0" encoding="UTF-8"?>
<media>
	<containerFormats>
		<format>flv</format>
		<format>f4v</format>
		<format>wmv</format>
		<format>mp4</format>
		<format>m4v</format>
		<format>ogg</format>
		<format>webm</format>
		
		<!-- // Mpeg1 standard -->
		<format>mpeg</format>

		<format>mpegts</format>
		<format>avi</format>
		<format>mkv</format>
		<format>divx</format>
		<format>mov</format>
		<format>3gp</format>
		
		<!-- // Audio ones -->
		<format>mp3</format>
		<format>wma</format>
		<format>m4a</format>

	</containerFormats>
	
	<audioCodecs>
		<!--  Format of the codec tag:
				<codec name="CODEC_NAME[Ex:libmp3lame]" decode="true" encode="true" provider="LIBRARY_PROVIDER[EX:ffmpeg]" strict="STRICTNESS[Ex:experimental(needed for ffmpeg)] />
		 -->
		<codec name="wmav2" decode="true" encode="true" provider="ffmpeg" />
		<codec name="ac3" decode="true" encode="true" provider="ffmpeg" />
		<codec name="flac" decode="true" encode="true" provider="ffmpeg" />
		<!--  Strictly experimental on ffmpeg. Dont have libfaac for now -->
		<codec name="aac" decode="true" encode="true" provider="ffmpeg" strict="experimental" />
		<!-- At this point its not available, but when we do, it should be the preferred codec 
			<codec name="libfaac" decode="true" encode="true" provider="libfaac??" />
		-->
		<codec name="libmp3lame" decode="false" encode="true" provider="ffmpeg" />
		<codec name="libvorbis" decode="false" encode="true" provider="ffmpeg" />
		<codec name="libopencore_amrnb" decode="true" encode="true" provider="ffmpeg" />
		<codec name="pcm_s16be" decode="true" encode="true" provider="ffmpeg" />
		<codec name="pcm_s16le" decode="true" encode="true" provider="ffmpeg" />
		
	</audioCodecs>

	<videoCodecs>
	
		<!--  Decode only. So useful for just extracting images/thumbnails -->
		<codec name="vp6" decode="true" encode="false" provider="ffmpeg" />

		<!--  Encode only -->
		<codec name="libx264" decode="false" encode="true" provider="ffmpeg" />

		<!--  Encode only -->
		<codec name="libtheora" decode="false" encode="true" provider="ffmpeg" />

		<codec name="wmv2" decode="true" encode="true" provider="ffmpeg" />
		<codec name="msmpeg4" decode="true" encode="true" provider="ffmpeg" />
		<codec name="h263" decode="true" encode="true" provider="ffmpeg" />
		<codec name="mpeg4" decode="true" encode="true" provider="ffmpeg" />
		<codec name="libvpx" decode="true" encode="true" provider="ffmpeg" />
		<codec name="mpeg2video" decode="true" encode="true" provider="ffmpeg" />
		<codec name="flv" decode="true" encode="true" provider="ffmpeg" />
	
	</videoCodecs>

</media>